<div class="container-sign-up">
  <%= image_tag "logo.svg", class: "logo"%>
  <div class="my-3">
    <h2 class="header">Welcome back</h2>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  label: false,
                  placeholder: "user@email.com",
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  label: false,
                  placeholder: "Password",
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, wrapper_html: { class: 'custom-control custom-switch' }, input_html: { class: 'custom-control-input' }, label_html: {class: 'custom-control-label' }, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <%= f.button :submit, "Log in", class: "btn-quiz" %>
  <% end %>
    <%= link_to "Sign up", intro_path, class: "btn-quiz" %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn" %>
</div>
