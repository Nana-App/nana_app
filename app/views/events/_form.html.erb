<%= simple_form_for event do |f| %>
  <%= f.input :title%>
  <%= f.input :description%>
  <%= f.input :max_participants%>
  <%= f.input :start_date%>
  <%= f.input :end_date%>
  <%= f.input :location%>
  <%= f.select :category, options_for_select(%w[Private Public])%>

  <% #if @event.category.include?("Private") %>
    <% user_collection = [] %>
    <%  User.all.each do |user| %>
      <%  user_collection.push([user.firstname, user.id]) %>
    <% end %>
    <%= f.input :invitations, as: :check_boxes, collection: user_collection, input_html: { multiple: true }, label_method: :first, value_method: :second %>
  <% #end %>

  <%= f.button :submit%>
<% end %>

